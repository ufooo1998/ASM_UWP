<Page x:ConnectionId='1'
    x:Class="ASM.Views.Form"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASM.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer>
        <Pivot>
            <PivotItem Header="Login">
                <StackPanel>
                    <TextBox x:ConnectionId='27' x:Name="LoginEmail"                                                 Header="Email" Margin="5 5 0 0"></TextBox>

                    <PasswordBox x:ConnectionId='28' x:Name="LoginPassword"                                                        Header="Password" Margin="5 5 0 0"></PasswordBox>
                    <TextBlock x:ConnectionId='29' x:Name="ResponseLogin" Visibility="Collapsed" Margin="5 5 0 0" Foreground="Red"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5 20 0 20">
                        <Button x:ConnectionId='30'                  Content="Submit" Margin="0 5 0 0"></Button>
                        <Button x:ConnectionId='31'                        Content="Reset Form" Margin="10 5 0 0"></Button>
                    </StackPanel>
                </StackPanel>

            </PivotItem>
            
            <PivotItem Header="Register">
                <StackPanel  Margin="10">
                    <StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Grid.Row="0">
                                <TextBox x:ConnectionId='25' x:Name="FirstName" Header="First Name" Margin="5 5 5 0"></TextBox>
                                <TextBlock x:ConnectionId='26' x:Name="firstName" Visibility="Collapsed" Margin="0 5 0 0" Foreground="Red"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Grid.Row="0">
                                <TextBox x:ConnectionId='23' x:Name="LastName" Header="Last Name" Margin="5 5 0 0"></TextBox>
                                <TextBlock x:ConnectionId='24' x:Name="lastName" Visibility="Collapsed" Margin="0 5 0 0" Foreground="Red"/>
                            </StackPanel>
                        </Grid>

                        <TextBox x:ConnectionId='2' x:Name="Email" Header="Email" Margin="5 5 0 0"></TextBox>
                        <TextBlock x:ConnectionId='3' x:Name="email" Visibility="Collapsed" Margin="0 5 0 0" Foreground="Red"/>

                        <PasswordBox x:ConnectionId='4' x:Name="Password" Header="Password" Margin="5 5 0 0"></PasswordBox>
                        <TextBlock x:ConnectionId='5' x:Name="password" Visibility="Collapsed" Margin="0 5 0 0" Foreground="Red"/>

                        <TextBlock Text="Gender" Margin="5 5 0 0"></TextBlock>
                        <RadioButton x:ConnectionId='6'                               Tag="0" Margin="10 5 0 0">Male</RadioButton>
                        <RadioButton x:ConnectionId='7'                               Tag="1" Margin="10 5 0 0">Female</RadioButton>
                        <RadioButton x:ConnectionId='8'                               Tag="2" Margin="10 5 0 0" IsChecked="True">Other</RadioButton>

                        <CalendarDatePicker x:ConnectionId='9' x:Name="DatePicker"                                              Header="Birthday" Margin="5 5 0 0"></CalendarDatePicker>
                        <TextBlock x:ConnectionId='10' x:Name="ResponseDate" Visibility="Collapsed" Margin="0 5 0 0" Foreground="Red"/>
                        <Popup/>

                        <TextBox x:ConnectionId='11' x:Name="Phone" Header="Phone Number" Margin="5 5 0 0"></TextBox>
                        <TextBlock x:ConnectionId='12' x:Name="phone" Visibility="Collapsed" Margin="0 5 0 0" Foreground="Red"/>

                        <TextBox x:ConnectionId='13' x:Name="Address" Header="Address" Margin="5 5 0 0"></TextBox>
                        <TextBlock x:ConnectionId='14' x:Name="address" Visibility="Collapsed" Margin="0 5 0 0" Foreground="Red"/>

                        <TextBox x:ConnectionId='15' x:Name="Introduction" Header="Introduction" TextWrapping="Wrap" AcceptsReturn="True" Height="100" Margin="5 5 0 0"></TextBox>
                        <StackPanel Orientation="Horizontal">
                            <Border HorizontalAlignment="Left" Height="150" Width="150" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="5 5 0 0">
                                <Image x:ConnectionId='22' x:Name="Avatar" Height="150" Width="150"/>
                            </Border>
                            <StackPanel VerticalAlignment="Bottom">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Url:"  Margin="5 5 0 0"/>
                                    <TextBlock x:ConnectionId='21' x:Name="AvatarUrl" Margin="5 5 0 0"/>
                                </StackPanel>
                                <TextBlock x:ConnectionId='20' x:Name="avatar" Visibility="Collapsed" Margin="5 5 0 0" Foreground="Red"/>
                            </StackPanel>
                        </StackPanel>
                        <Button x:ConnectionId='16'                    Content="Take a Photo" Margin="5 5 0 0"></Button>
                        <Button x:ConnectionId='17'                      Content="Choose a Photo" Margin="5 5 0 0"></Button>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5 20 0 20">
                            <Button x:ConnectionId='18'                     Content="Submit" Margin="0 5 0 0"></Button>
                            <Button x:ConnectionId='19'                  Content="Reset Form" Margin="10 5 0 0"></Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </PivotItem>
            
        </Pivot>
        
    </ScrollViewer>

</Page>

